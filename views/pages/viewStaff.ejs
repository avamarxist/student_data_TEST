<html>
    <head>
        <%- include('../partials/head') %>
    </head>

    <body>
        <%- include('../partials/dashboard') %>
        <%- include('../partials/messages') %>
        
        <h1> Current staff </h1>
        <% for(let staff of data) { %>
            <article>
                <a href="<%- `/records/staff/view/${staff._id}` %>">
                    <h2><%= `${staff.lName}, ${staff.fName}` %></h2>
                </a>
                <p><%= `Status: ${staff.status}` %></p>
            </article>
        <% } %>
    </body>
</html>