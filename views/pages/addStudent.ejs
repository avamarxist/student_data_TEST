<html>
    <head>
        <%- include('../partials/head')%>
       </head>

    <body>
        <h1>Add new student</h1>

        <form method="POST" action="/catalog/student/add" enctype="text/html">

            <div class="form-group row">

                <div class="col-xs-3">
                    <label for="osis">OSIS #</label>
                    <input name="osis" type="text" class="form-control" id="osis" placeholder="OSIS ID">
                </div>
                <div class="col-xs-3">
                    <label for="lName">Last Name</label>
                    <input name="lName" type="text" class="form-control" id="lName" placeholder="Last name">
                </div>
                <div class="col-xs-3">
                    <label for="fName">First Name</label>
                    <input name="fName" type="text" class="form-control" id="fName" placeholder="First Name">
                </div>
            
            </div>

            <div class="form-group row">

                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" name="status" type="button" id="status" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Status
                    </button>
                    <div class="dropdown-menu" aria-labelledby="status">
                    <a class="dropdown-item" href="#">Active</a>
                    <a class="dropdown-item" href="#">Withdrawn</a>
                    <a class="dropdown-item" href="#">Graduated</a>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" name="level" type="button" id="level" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Level
                    </button>
                    <div class="dropdown-menu" aria-labelledby="level">
                    <a class="dropdown-item" href="#">9</a>
                    <a class="dropdown-item" href="#">10</a>
                    <a class="dropdown-item" href="#">11</a>
                    <a class="dropdown-item" href="#">12</a>
                    </div>
                </div>

            </div>

            <div class="form-group row">
            
                <div class="col-xs-3">
                    <label for="doeEmail">DOE Email</label>
                    <input type="email" name="doeEmail" class="form-control" id="doeEmail" placeholder="@nycstudents.net">
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        
        </form>

    </body>
</html>