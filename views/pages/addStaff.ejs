<html>
    <head>
        <%- include('../partials/head')%>
       </head>

    <body>
        <h1>Add new staff</h1>

        <form method="POST" action="/catalog/staff/add" enctype="text/html">

            <div class="form-group row">
                <div class="form-group col-xs-2"></div>
                    <label for="status">Status</label>
                    <select name="status" class="form-control" id="status">
                    <option value="active">Active</option>
                    <option value="on leave">On leave</option>
                    <option value="inactive">Former/retired</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">

                <div class="col-xs-3">
                    <label for="lName">Last Name</label>
                    <input name="lName" type="text" class="form-control" id="lName" placeholder="Last name">
                </div>
                <div class="col-xs-3">
                    <label for="fName">First Name</label>
                    <input name="fName" type="text" class="form-control" id="fName" placeholder="First Name">
                </div>
            
            </div>

            <div class="form-group row">

                

                <div class="col-xs-4">

                    <label for="mainEmail">School Email</label>

                    <input type="email" name="mainEmail" class="form-control" id="mainEmail" value = "@schools.nyc.gov">
                </div>

                <div class="col-xs-2">
                    <label for="phoneExt">Phone ext.</label>
                    <input type="text" class="form-control" name="phoneExt" id="phoneExt">
                </div>

                <div class="col-xs-2">
                    <label for="office">Office No.</label>
                    <input type="text" class="form-control" name="office" id="office">
                </div>

            </div>

            <div class="form-group row">
            
                
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        
        </form>

    </body>
</html>